# Increase volume
"amixer set Master 2%+;~/.config/lemonbar/volume_popup"
	XF86AudioRaiseVolume
# Decrease volume
"amixer set Master 2%-;~/.config/lemonbar/volume_popup"
	XF86AudioLowerVolume
# Toggle mute
"amixer set Master toggle;~/.config/lemonbar/volume_popup"
	XF86AudioMute

# Increase brightness
"xbacklight + 1"
	XF86MonBrightnessUp

# Decrease brightness
"xbacklight - 1"
	XF86MonBrightnessDown

# Switch keyboard
"xkb-switch | lemonbar"
	ISO_Next_Group
